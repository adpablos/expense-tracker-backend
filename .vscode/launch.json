{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Expense Tracker",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
            "args": ["--files", "${workspaceFolder}/src/index.ts"],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            },
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist/**/*.js"],
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Unit Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--config", "jest.unit.config.ts", "--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Jest Integration Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--config", "jest.integration.config.ts", "--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Jest Specific Integration Test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test:integration:specific"
            ],
            "args": [
                "${input:testFile}",
                "--",
                "--testNamePattern",
                "${input:testNamePattern}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Debug with Nodemon",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "program": "${workspaceFolder}/src/index.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "args": ["--exec", "node", "--loader", "ts-node/esm"],
            "env": {
                "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
            }
          }
    ],
    "inputs": [
      {
        "id": "testFile",
        "type": "promptString",
        "description": "Enter the path to the test file",
        "default": "tests/integration/user.test.ts"
      },
      {
        "id": "testNamePattern",
        "type": "promptString",
        "description": "Enter the test name pattern",
        "default": "Users API Integration Tests"
      }
    ]
}