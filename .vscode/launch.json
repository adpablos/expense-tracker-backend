{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Unit Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--config", "jest.unit.config.ts", "--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Jest Integration Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "args": ["--config", "jest.integration.config.ts", "--runInBand"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          },
          {
            "type": "node",
            "request": "launch",
            "name": "Jest Specific Integration Test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "test:integration:specific"
            ],
            "args": [
                "${input:testFile}",
                "--",
                "--testNamePattern",
                "${input:testNamePattern}"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
          }
    ],
    "inputs": [
      {
        "id": "testFile",
        "type": "promptString",
        "description": "Enter the path to the test file",
        "default": "tests/integration/user.test.ts"
      },
      {
        "id": "testNamePattern",
        "type": "promptString",
        "description": "Enter the test name pattern",
        "default": "Users API Integration Tests"
      }
    ]
}