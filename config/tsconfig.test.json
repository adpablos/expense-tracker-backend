{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "types": ["jest", "node"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": false,
      "isolatedModules": true
    },
    "include": ["src/**/*", "tests/**/*", "global.d.ts"],
    "exclude": ["node_modules", "dist"]
}
